{
  "info": {
    "name": "Records API",
    "description": "API for managing records with user-specific access",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string",
      "description": "Base URL for the API"
    }
  ],
  "item": [
    {
      "name": "Create Record",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "api_key",
            "value": "your-api-key",
            "type": "text",
            "required": true
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/records",
          "host": ["{{baseUrl}}"],
          "path": ["api", "records"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Test Record\",\n    \"age\": 25,\n    \"isActive\": true\n}"
        },
        "description": "Create a new record with the provided data"
      }
    },
    {
      "name": "Get All Records",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "api_key",
            "value": "your-api-key",
            "type": "text",
            "required": true
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/records?page=1&limit=10&sortBy=age&order=desc&filterKey=status&filterValue=active&filterValue=pending",
          "host": ["{{baseUrl}}"],
          "path": ["api", "records"],
          "query": [
            {
              "key": "page",
              "value": "1",
              "description": "Page number for pagination"
            },
            {
              "key": "limit",
              "value": "10",
              "description": "Number of records per page"
            },
            {
              "key": "sortBy",
              "value": "age",
              "description": "Field to sort by"
            },
            {
              "key": "order",
              "value": "desc",
              "description": "Sort order (asc or desc)"
            },
            {
              "key": "filterKey",
              "value": "status",
              "description": "Field to filter by"
            },
            {
              "key": "filterValue",
              "value": "active",
              "description": "Filter value (can be multiple)"
            },
            {
              "key": "filterValue",
              "value": "pending",
              "description": "Additional filter value"
            }
          ]
        },
        "description": "Get all records with pagination, sorting, and filtering options"
      }
    },
    {
      "name": "Get Record by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "api_key",
            "value": "your-api-key",
            "type": "text",
            "required": true
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/records/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "records", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "record-id-here",
              "description": "Record ID"
            }
          ]
        },
        "description": "Get a specific record by ID"
      }
    },
    {
      "name": "Update Record",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "api_key",
            "value": "your-api-key",
            "type": "text",
            "required": true
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/records/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "records", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "record-id-here",
              "description": "Record ID"
            }
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Updated Record\",\n    \"age\": 26\n}"
        },
        "description": "Update a specific record by ID"
      }
    },
    {
      "name": "Delete Record",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "api_key",
            "value": "your-api-key",
            "type": "text",
            "required": true
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/records/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "records", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "record-id-here",
              "description": "Record ID"
            }
          ]
        },
        "description": "Delete a specific record by ID"
      }
    },
    {
      "name": "Delete All Records",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "api_key",
            "value": "your-api-key",
            "type": "text",
            "required": true
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/records",
          "host": ["{{baseUrl}}"],
          "path": ["api", "records"]
        },
        "description": "Delete all records for the authenticated user"
      }
    }
  ]
} 